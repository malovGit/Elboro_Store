@model IEnumerable<ASPNETIdentityWithOnion.Core.DomainModels.Identity.AppUser>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashboard.cshtml";
    ViewBag.Title = "Users";
}

    <div class="panel panel-default">      
        <div class="panel-heading">
            <div class="text-muted text-center bootstrap-admin-box-title">
                Users
            </div>
        </div>
        <div class="bootstrap-admin-panel-content">
            @Html.ActionLink("New User", "Create", null, new { @class = "btn btn-danger new-item" })
            
            <table class="table table-striped table-condensed table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th class="text-center">@Html.DisplayNameFor(model => model.UserName)</th>
                        <th class="text-center">@Html.DisplayNameFor(model => model.Email)</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int item = 0; item < Model.Count(); item ++)
                    {
                        <tr>
                            <td>
                                @(item+1)
                            </td>
                            <td class="text-center">
                                @Html.ActionLink(Model.ElementAt(item).UserName, "Details", new { id = Model.ElementAt(item).Id })
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => Model.ElementAt(item).Email)
                            </td>
                            <td class="text-center">
                                @Html.ActionLink("Edit", "Edit", new { id = Model.ElementAt(item).Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = Model.ElementAt(item).Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>