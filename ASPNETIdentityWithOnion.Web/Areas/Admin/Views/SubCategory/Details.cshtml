@using System.Configuration
@model ASPNETIdentityWithOnion.Web.Areas.Admin.Models.SubCategoryViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Details</h2>

<div>
    <h4>SubCategoryViewModel</h4>
    <hr />

    <div class="panel panel-body">
        <div class="row">
            <div class="col-sm-5">
                @if (Model.Path == null)
                {
                    <div class="ImagePreviewBox">
                        <img class="img-thumbnail" width="250" height="400"
                             src="/Images/EmptyImaje.jpg" />
                    </div>
                }
                else
                {
                    <img class="img-thumbnail" width="250" height="400"
                         src="@Url.Content(ConfigurationManager.AppSettings["picPath"].
                             ToString() + "/Subcategory/" + Model.Path)" alt="@Model.SubCategoryId" />
                }
            </div>

            <div class="col-sm-7">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                        @Html.HiddenFor(model => model.SubCategoryId)
                        @Html.HiddenFor(model => model.Path)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.IsActive)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CategoryName)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.SubCategoryId  }) |
    @Html.ActionLink("Back to List", "Index")
</p>
