@using System.Configuration
@model ASPNETIdentityWithOnion.Web.Areas.Admin.Models.SubCategoryViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SubCategoryViewModel</h4>
    <hr />
    
    <div class="panel panel-body">
        <div class="row">
            <div class="col-sm-5">
                @if (Model.Path == null)
                {
                    <div class="ImagePreviewBox">
                        <img class="img-thumbnail" width="250" height="400"
                             src="/Images/EmptyImaje.jpg" />
                    </div>
                }
                else
                {
                    <img class="img-thumbnail" width="250" height="400"
                         src="@Url.Content(ConfigurationManager.AppSettings["picPath"].
                             ToString() + "/Subcategory/" + Model.Path)" alt="@Model.SubCategoryId" />
                }
            </div>

            <div class="col-sm-7">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                        @Html.HiddenFor(model => model.SubCategoryId)
                        @Html.HiddenFor(model => model.Path)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.IsActive)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CategoryName)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Delete","SubCategory", new { id = Model.SubCategoryId }, FormMethod.Post,null)) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
