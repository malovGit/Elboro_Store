@model ASPNETIdentityWithOnion.Core.DomainModels.Identity.ApplicationRole
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashboard.cshtml";
}
<h2>Delete</h2>
<h3>Are you sure you want to delete this Role <b>@Html.DisplayFor(model => model.Name)</b>? </h3>
<p class="alert-danger">Deleting this Role will remove all users from this role. It will not delete the users.</p>
<hr />
<div class="panel panel-body">
    <div class="">
        <h4>List of users in this role</h4>
        @if (ViewBag.UserCount == 0)
            {
            <hr />
                    <p>No users found in this role.</p>
        }
        <table class="table">
            @foreach (var item in ViewBag.Users)
            {
                <tr>
                    <td>
                        @item.UserName
                    </td>
                </tr>
            }
        </table>
    </div>
 
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @Html.ActionLink("Back to List", "Index")
    </div>
}
