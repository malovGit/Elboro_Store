@using System.Configuration
@model ASPNETIdentityWithOnion.Web.Areas.Admin.Models.ProductViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Delete</h2>

<h3 class="h1 alert-danger">Are you sure you want to delete this product? <b>@Html.DisplayFor(model => model.Name)</b></h3>
<hr />
<div class="row">
    
    <div class="col-sm-6">
        <dl class="dl-horizontal">

            <dt class="setting-dt">
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt class="setting-dt">
                @Html.DisplayNameFor(model => model.ShortDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ShortDescription)
            </dd>

            <dt class="setting-dt">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>

            <dt class="setting-dt">
                @Html.DisplayNameFor(model => model.LongDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LongDescription)
            </dd>

            <dt class="setting-dt">
                @Html.DisplayNameFor(model => model.SubCategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SubCategoryName)
            </dd>

        </dl>
        @using (Html.BeginForm("Delete","Product", Model,FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
    <div class="col-sm-6 imagePlacePic" id="placePic">
        @if (Model.Images != null)
        {
            foreach (string item in Model.Images)
            {
                <div class="col-sm-6 show-place">
                    <div class="content clossable">
                        <div class="close"></div>
                        <a href="#" class="thumbnail file-open imgref">
                            <img class="imgPic" src='@Url.Content(ConfigurationManager.AppSettings["picPath"].ToString()
                             + "/Product/" + item)' width="140" height="180" alt="0">
                        </a>

                    </div>
                </div>
            }
        }
    </div>   
    
    
</div>
<style>
    .setting-dt{
        text-align:left !important;
    }
</style>