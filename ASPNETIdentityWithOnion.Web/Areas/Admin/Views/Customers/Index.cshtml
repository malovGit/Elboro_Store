@model IEnumerable<ASPNETIdentityWithOnion.Web.Areas.Admin.Models.CustomerViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashboard.cshtml";
}

    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="text-muted text-center bootstrap-admin-box-title">Customers</div>
        </div>
        <div class="bootstrap-admin-panel-content">
            @Html.ActionLink("New Customer", "Create", null, new { @class = "btn btn-danger new-item" })
            
            <table class="table table-striped table-condensed table-bordered table-hover">
                <tr>

                    <th class="">
                        @Html.DisplayNameFor(model => model.CustomerID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Photo)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </th>

                    <th>Actions</th>
                </tr>

    @for (int item = 0; item < Model.Count(); item++)
    {
        <tr class="">
            <td class="">
                @Html.DisplayFor(modelItem => Model.ElementAt(item).CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(item).Photo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(item).FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(item).LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(item).Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(item).Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(item).PhoneNumber)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(item).DateOfBirth)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

            </table>
        </div>
    </div>
